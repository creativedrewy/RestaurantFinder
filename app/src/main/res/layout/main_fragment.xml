<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.MainFragment" >

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/stock_list_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="119dp"
        tools:layout_editor_absoluteY="227dp" />

    <TextView
        android:id="@+id/cry_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cry_text"
        android:textSize="80sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/stock_list_recyclerview"
        app:layout_constraintStart_toStartOf="@+id/stock_list_recyclerview"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sorry_text_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/error_loading"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cry_textview" />

    <TextView
        android:id="@+id/empty_icon_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/empty_icon"
        android:textSize="80sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/stock_list_recyclerview"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/empty_result_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/empty_result"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/empty_icon_textview" />

</androidx.constraintlayout.widget.ConstraintLayout>